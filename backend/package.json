    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "prisma": "^5.22.0",
    "razorpay": "^2.9.2",
    "redis": "^4.6.11",
    "socket.io": "^4.7.4",
    "stripe": "^18.5.0",
    "twilio": "^4.19.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
